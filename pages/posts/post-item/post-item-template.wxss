.content-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.content-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.content-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.content-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx;
}

.content-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.content-image {
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto;
  margin-bottom: 15px;
}

.content-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.content-footer {
  font-size: 13px;
  flex-direction: row;
  margin-left: 10px;
  line-height: 16px;
}

.footer-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.footer-font {
  vertical-align: middle;
  margin-right: 20px;
}
